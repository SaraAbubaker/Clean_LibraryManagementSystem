@model Library.UI.Models.BookViewModel

@{
    ViewData["Title"] = "Books";
    bool isCustomer = User.IsInRole("Customer");
    bool isLibrarian = User.IsInRole("Librarian");
}

<div id="books-page">

    <h2>Books</h2>

    <!-- Success/Error Message -->
    <div id="actionMessage" class="alert alert-success d-none"></div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    else if (Model.Books.Any())
    {
        @* Show "Create New Book" button only for Librarian *@
        @if (isLibrarian)
        {
            <div class="mb-3">
                <a href="@Url.Action("CreateBook")" class="btn btn-success">Create New Book</a>
            </div>
        }

        <!-- Page size selector -->
        <div class="mb-3">
            <input type="hidden" name="search" value="@Model.Search" />
            <input type="hidden" name="filter" value="@Model.Filter" />

            <label for="pageSizeSelect" class="me-2">Entries per page:</label>
            <select id="pageSizeSelect" class="form-select d-inline-block w-auto"
                    asp-for="PageSize"
                    asp-items="@(new SelectList(new[] { 5, 10, 20, 50 }, Model.PageSize))">
            </select>
        </div>

        @await Html.PartialAsync("_BooksTablePartial", Model)
    }
    else
    {
        <div class="alert alert-info">No books found.</div>
    }

    @* Only Librarian gets modals *@
    @if (isLibrarian)
    {
        <!-- Archive Confirmation Modal -->
        <div class="modal" id="archiveModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Archive</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to archive this book?
                    </div>
                    <div class="modal-footer">
                        <form id="archiveForm">
                            <input type="hidden" id="archiveBookId" />
                            <button type="submit" class="btn btn-danger">Yes, Archive</button>
                        </form>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Update Modal -->
        <div class="modal" id="updateModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Update Book</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="updateForm">
                            <!-- Title -->
                            <div class="mb-3">
                                <label for="updateTitle" class="form-label">Title</label>
                                <input type="text" class="form-control" id="updateTitle" required />
                            </div>
                            @*
                            TODO: Author Update Feature

                            Currently, updating a book only allows changing the title, publish date, and categories.

                            - Updating authors is tricky because not every author exists in the system.
                            - Future improvement idea:
                            Option 2: Multi-select dropdown with "Add New Author" functionality.
                            1. Keep a dropdown/multi-select of existing authors.
                            2. Add a button or input field that allows the user to add a new author inline.
                            3. When a new author is added, it gets created in the backend and immediately becomes selectable.
                            4. On book update submission, link the selected/new authors to the book.

                            Pros: Works well for books with multiple authors, flexible for new authors.
                            Cons: Requires additional frontend JS and backend handling for author creation.

                            For now, author editing is disabled in the update modal.
                            *@

                            <!-- Categories (dropdown) -->
                            <div class="mb-3">
                                <label for="updateCategorySelect" class="form-label">Category</label>
                                <select id="updateCategorySelect" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                            </div>


                            @*
                            TODO: Publisher Update Feature

                            Currently, updating a book only allows changing the title, publish date, and categories.

                            - Updating the publisher is tricky because the publisher might not exist yet in the system.
                            - Future improvement idea:
                            Option: Multi-select or searchable dropdown with "Add New Publisher" functionality.
                            1. Keep a dropdown of existing publishers.
                            2. Add a button or input field that allows the user to add a new publisher inline.
                            3. When a new publisher is added, it gets created in the backend and immediately becomes selectable.
                            4. On book update submission, link the selected/new publisher to the book.

                            Pros: Flexible for new publishers, supports changing publisher easily.
                            Cons: Requires extra frontend JS and backend handling for publisher creation.

                            For now, publisher editing is disabled in the update modal.
                            *@

                            <!--Publish Date Calendar-->
                            <div class="mb-3">
                                <label for="updatePublishDate" class="form-label">Publish Date</label>
                                <input type="date" class="form-control" id="updatePublishDate" />
                            </div>
                            <input type="hidden" id="updateBookId" />
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/book.js"></script>
}
