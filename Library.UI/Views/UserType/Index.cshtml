@model Library.UI.Models.UserTypeViewModel

@{
    ViewData["Title"] = "User Types";
}

<div id="usertype-page">

    <h2>User Types</h2>

    <!-- Success/Error Message -->
    <div id="actionMessage" class="alert alert-success d-none"></div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    else if (Model.UserTypes.Any())
    {
        <div class="mb-3">
            <button id="createUserTypeBtn" class="btn btn-success">
                Create New User Type
            </button>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var type in Model.UserTypes)
                {
                    <tr id="userTypeRow-@type.Id">
                        <td>@type.Id</td>
                        <td class="role">@type.Role</td>
                        <td>
                            <!-- Update -->
                            <a href="#"
                               class="btn btn-sm btn-primary update-btn"
                               data-user-type-id="@type.Id">
                                Update
                            </a>

                            <!-- Archive -->
                            <button type="button"
                                    class="btn btn-sm btn-danger archive-btn"
                                    data-bs-toggle="modal"
                                    data-bs-target="#archiveModal"
                                    data-user-type-id="@type.Id">
                                Archive
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No user types found.</div>
    }

    <!-- Archive Confirmation Modal -->
    <div class="modal fade" id="archiveModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Archive</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to archive this user type?
                </div>
                <div class="modal-footer">
                    <form id="archiveForm">
                        <input type="hidden" id="archiveUserTypeId" />
                        <button type="submit" class="btn btn-danger">
                            Yes, Archive
                        </button>
                    </form>
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Update Modal -->
    <div class="modal fade" id="updateModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update User Type</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="updateForm">
                        <div class="mb-3">
                            <label class="form-label">Role</label>
                            <input type="text"
                                   class="form-control"
                                   id="updateRole"
                                   required />
                        </div>
                        <input type="hidden" id="updateUserTypeId" />
                        <button type="submit" class="btn btn-primary">
                            Save
                        </button>
                        <button type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal">
                            Cancel
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}
